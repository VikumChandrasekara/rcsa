@model List<rcsa.Models.Assessment>

@{
    ViewData["Title"] = "Add Assessment";
    Layout = "~/Views/Shared/_aLayout.cshtml";
}

<style>
    /* Custom Theme Styles */
    .bg-primary-theme {
        background-color: #b10000 !important;
        color: white !important;
    }

    .bg-secondary-theme {
        background-color: #f4b700 !important;
        color: #212529 !important;
    }

    .text-primary-theme {
        color: #b10000 !important;
    }

    .text-secondary-theme {
        color: #f4b700 !important;
    }

    .btn-primary-theme {
        background-color: #b10000;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-primary-theme:hover {
            background-color: #8a0000;
            color: white;
        }

    .btn-secondary-theme {
        background-color: #f4b700;
        color: #212529;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-secondary-theme:hover {
            background-color: #d39e00;
            color: #212529;
        }

    .assessment-table {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 1px 15px rgba(0, 0, 0, 0.1);
    }

        .assessment-table thead th {
            background-color: #212529;
            color: white;
            font-weight: 600;
            border-bottom: 2px solid #f4b700;
        }

    .main-heading-row {
        background-color: rgba(177, 0, 0, 0.1) !important;
        font-weight: 700;
        font-size: 1.1em;
    }

    .sub-heading-row {
        background-color: rgba(244, 183, 0, 0.1) !important;
        font-weight: 600;
    }

    .form-section {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
        padding: 25px;
        margin-bottom: 30px;
    }

    .form-control:focus {
        border-color: #f4b700;
        box-shadow: 0 0 0 0.2rem rgba(244, 183, 0, 0.25);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(244, 183, 0, 0.05);
        transform: translateX(4px);
        transition: all 0.2s ease;
    }
    /* Question row styling */
    .question-row {
        border-bottom: 2px solid rgba(244, 183, 0, 0.1);
        transition: all 0.2s ease;
    }

    /* Hover effect only for question rows */
    tr[id^="row_"]:hover {
        background-color: rgba(244, 183, 0, 0.05) !important;
        transform: translateX(4px);
        cursor: pointer;
    }

    /* Remove hover from heading rows */
    .main-heading-row:hover,
    .sub-heading-row:hover {
        background-color: inherit !important;
        transform: none !important;
        cursor: default;
    }
</style>

<div class="container mt-4">
    <h2 class="text-primary-theme mb-4 fw-bold">Add Assessment</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert bg-primary-theme alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="form-section">
        <div class="table-responsive">
            <table class="table assessment-table table-hover">
                <thead>
                    <tr>
                        <th style="width: 50%">Question</th>
                        <th>Marks</th>
                        <th>NA Flag</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                @{
                    int headingCounter = 1;
                }
                <tbody>
                    @foreach (var mainHeadingGroup in Model.OrderBy(q => q.MainHeading).GroupBy(q => q.headingTitel))
                    {
                        int subheadingCounter = 1;
                        int rowCounter = 1;

                        <tr class="main-heading-row">
                            <td colspan="4"><strong>@headingCounter. @mainHeadingGroup.Key</strong></td>
                        </tr>

                        @foreach (var subHeadingGroup in mainHeadingGroup.GroupBy(q => q.subheadingTitel))
                        {
                            if (subHeadingGroup.Key == "0" || string.IsNullOrEmpty(subHeadingGroup.Key))
                            {
                                @foreach (var item in subHeadingGroup)
                                {
                                    <tr id="row_@item.Id" class="question-row">
                                        <td id="question_@item.Id">@headingCounter.@rowCounter. @item.Question</td>
                                        <td id="marks_@item.Id">@item.Marks</td>
                                        <td id="NAflag_@item.Id">@item.NAflag</td>
                                        <td>
                                            <button type="button" class="btn btn-secondary-theme btn-sm" onclick="enableEdit(@item.Id)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirmDelete();">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-primary-theme btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>

                                    <tr id="editRow_@item.Id" style="display: none;">
                                        <form id="editForm_@item.Id" method="post">
                                            <input type="hidden" name="Id" value="@item.Id" />
                                        <td><input type="text" name="Question" class="form-control" value="@item.Question" required /></td>
                                        <td><input type="number" name="Marks" class="form-control" value="@item.Marks" required /></td>
                                        <td><input type="number" name="NAflag" class="form-control" value="@item.NAflag" required /></td>
                                        <td>
                                            <button type="button" class="btn btn-secondary-theme btn-sm" onclick="saveEdit(@item.Id)">
                                                <i class="bi bi-check-circle"></i> Save
                                            </button>
                                            <button type="button" class="btn btn-primary-theme btn-sm" onclick="showDeleteModal(@item.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                        </form>
                                    </tr>
                                    rowCounter++;
                                }
                            }
                            else
                            {
                                <tr class="sub-heading-row">
                                    <td colspan="4"><strong>@headingCounter.@subheadingCounter. @subHeadingGroup.Key</strong></td>
                                </tr>

                                int subRowCounter = 1;
                                @foreach (var item in subHeadingGroup)
                                {
                                    <tr id="row_@item.Id">
                                        <td id="question_@item.Id">@headingCounter.@subheadingCounter.@subRowCounter. @item.Question</td>
                                        <td id="marks_@item.Id">@item.Marks</td>
                                        <td id="NAflag_@item.Id">@item.NAflag</td>
                                        <td>
                                            <button type="button" class="btn btn-secondary-theme btn-sm" onclick="enableEdit(@item.Id)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirmDelete();">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-primary-theme btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>

                                    <tr id="editRow_@item.Id" style="display: none;">
                                        <form id="editForm_@item.Id" method="post">
                                            <input type="hidden" name="Id" value="@item.Id" />
                                        <td><input type="text" name="Question" class="form-control" value="@item.Question" required /></td>
                                        <td><input type="number" name="Marks" class="form-control" value="@item.Marks" required /></td>
                                        <td><input type="number" name="NAflag" class="form-control" value="@item.NAflag" required /></td>
                                        <td>
                                            <button type="button" class="btn btn-secondary-theme btn-sm" onclick="saveEdit(@item.Id)">
                                                <i class="bi bi-check-circle"></i> Save
                                            </button>
                                            <button type="button" class="btn btn-primary-theme btn-sm" onclick="cancelEdit(@item.Id)">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </button>
                                        </td>
                                        </form>
                                    </tr>
                                    subRowCounter++;
                                }
                                subheadingCounter++;
                            }
                        }
                        headingCounter++;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="form-section">
        <h4 class="text-primary-theme mb-4">Add New Question</h4>
        <form asp-action="Create" method="post">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Question</label>
                    <textarea name="Question" class="form-control" rows="2" required></textarea>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Marks</label>
                    <input type="number" name="Marks" class="form-control" step="0.01" required />
                </div>
                <div class="col-md-2">
                    <label class="form-label">N/A Flag</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="NAflag" value="1">
                        <label class="form-check-label">Allow N/A</label>
                    </div>
                </div>
                <input type="hidden" id="headingTitel" name="headingTitel" required />
                <input type="hidden" id="subheadingTitel" name="subheadingTitel" required />
                <div class="col-md-2">
                    <label class="form-label">Main Heading</label>
                    <select id="MainHeading" name="MainHeading" class="form-select" required>
                        <option value="">Select Heading</option>
                        @if (ViewBag.Headings != null)
                        {
                            @foreach (var heading in ViewBag.Headings)
                            {
                                <option value="@heading.Id" data-title="@heading.MainHeadings">@heading.MainHeadings</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Subheading</label>
                    <select id="SubHeading" name="SubHeading" class="form-select" required>
                        <option value="">Select Subheading</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary-theme w-100">
                        <i class="bi bi-plus-circle me-2"></i>Add
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="form-section">
        <h4 class="text-primary-theme mb-4">Publish Assessment</h4>
        <form method="post" action="@Url.Action("InsertAllAssessments", "Assessment")">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Assessment Type</label>
                    <select id="Astype" name="Astype" class="form-select" required>
                        <option value="R">RRO Assessment</option>
                        <option value="S">Service Center Assessment</option>
                        <option value="B">Branch Assessment</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromdate" class="form-control" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="todate" class="form-control" required />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary-theme w-100" id="publish-btn">
                        <i class="bi bi-cloud-upload me-2"></i>Publish
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="modal fade" id="publishModal" tabindex="-1" aria-labelledby="publishModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="publishModalLabel">Publish</h5>
                @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
            </div>
            <div class="modal-body">
                Are you sure you want to publish this assessment?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmPublish" class="btn btn-danger">Publish</button>
            </div>
        </div>
    </div>
</div>
<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this question? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDelete" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // AJAX for Subheadings
    $(document).ready(function () {
        $('#MainHeading').on('change', function () {
            const headingId = $(this).val();
            $('#SubHeading').empty().append('<option value="">Select Subheading</option>');

            if (headingId) {
                $.ajax({
                    url: '@Url.Action("GetSubHeadingsByHeading", "Home")',
                    data: { headingId: headingId },
                    success: function (subHeadings) {
                        subHeadings.forEach(sub => {
                            $('#SubHeading').append($('<option>', {
                                value: sub.id,
                                text: sub.subHeadingT
                            }));
                        });
                    }
                });
            }
        });

        // Set hidden heading titles
        $('#MainHeading').on('change', function () {
            const selected = $(this).find('option:selected');
            $('#headingTitel').val(selected.data('title'));
        });

        $('#SubHeading').on('change', function () {
            $('#subheadingTitel').val($(this).find('option:selected').text());
        });
    });

    // Edit Functions
    function enableEdit(id) {
        $(`#row_${id}, #editRow_${id}`).toggle();
    }

    function cancelEdit(id) {
        $(`#row_${id}, #editRow_${id}`).toggle();
    }

    function saveEdit(id) {
        const formData = $(`#editForm_${id}`).serialize();

        $.post('@Url.Action("Edit", "Assessment")', formData, function (data) {
            if (data.success) {
                $(`#question_${id}`).text(data.updatedQuestion);
                $(`#marks_${id}`).text(data.updatedMarks);
                $(`#NAflag_${id}`).text(data.updatedNAflag);
                cancelEdit(id);
            }
        });
    }

        document.addEventListener('DOMContentLoaded', function() {
        const publishBtn = document.getElementById('publish-btn');
        const confirmPublishBtn = document.getElementById('confirmPublish');
        const publishModal = new bootstrap.Modal(document.getElementById('publishModal'));
        const publishForm = document.querySelector('form[action*="InsertAllAssessments"]');

        // Show confirmation modal when clicking "Publish"
        publishBtn.addEventListener('click', function() {
            publishModal.show();
        });

        // Submit form when confirming publish
        confirmPublishBtn.addEventListener('click', function() {
            publishForm.submit();
        });
    });
        document.addEventListener('DOMContentLoaded', function () {
        let deleteForm;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        const confirmDeleteBtn = document.getElementById('confirmDelete');

        window.showDeleteModal = function (itemId) {
            // Find the delete form for the specific question
            deleteForm = document.querySelector(`form[action*="Delete"] input[name="id"][value="${itemId}"]`).closest('form');
            deleteModal.show();
        };

        confirmDeleteBtn.addEventListener('click', function () {
            if (deleteForm) {
                deleteForm.submit();
            }
        });
    });

</script>