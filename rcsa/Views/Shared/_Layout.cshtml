@{
    bool isVisible = true;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <style>
        /* Sidebar Styles */
        .sidebar {
            width: 220px;
            height: calc(100vh - 60px); /* Adjusted to account for navbar height */
            position: fixed;
            top: 60px; /* Ensure sidebar appears below the navbar */
            background-color: #abaca5;
            padding-top: 20px;
            box-shadow: 3px 0 8px rgba(0, 0, 0, 0.15); /* Slightly stronger shadow */
            transition: all 0.3s ease-in-out;
        }

            .sidebar a {
                display: block;
                padding: 14px;
                text-decoration: none;
                color: #c3123b !important;
                font-weight: 600;
                transition: all 0.3s ease-in-out;
                border-radius: 4px;
            }

                .sidebar a:hover {
                    background-color: #ddd;
                    border-radius: 5px;
                    transform: translateX(5px);
                    transition: all 0.3s ease-in-out;
                }

        /* Content */
        .content {
            margin-left: 240px;
            padding: 20px;
            margin-top: 60px; /* Adjusted to account for navbar height */
        }

        /* Navbar */
        .navbar-custom {
            top: 0;
            left: 0;
            width: 100%;
            height: 60px; /* Adjusted height */
            background: linear-gradient(to right, #f4b700 50%, #b10000 50%);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: fixed;
            z-index: 1000; /* Increased z-index for better layering */
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15); /* Added slight shadow */
        }

            /* Navbar Brand */
            .navbar-custom .navbar-brand {
                font-weight: bold;
                color: #fbfbfb !important;
                display: flex;
                align-items: center;
                font-size: 24px;
                padding: 0;
            }

                .navbar-custom .navbar-brand img {
                    height: 75px;
                    margin-right: 10px;
                    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.2)); /* Adds a subtle shadow */
                }

            /* User Info */
            .navbar-custom .user-info {
                display: flex;
                align-items: center;
                font-size: 14px;
                padding-right: 15px;
                gap: 15px;
            }

                .navbar-custom .user-info p {
                    margin: 0;
                    font-weight: 600;
                    color: #ffc107 !important;
                }

        /* Button Hover Effects */
        button {
            background-color: #c3123b;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            font-weight: bold;
        }

            button:hover {
                background-color: #a00;
                transform: scale(1.05);
            }

    </style>
</head>
<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand ms-3" href="#">
              @*   <img src="/images/collection-pb.png" alt="Bank Logo"> *@
         
            </a>
            <div class="user-info">
                <p><strong>Welcome,</strong> @ViewBag.UserName</p>
                <p><strong>Service No:</strong> @ViewBag.ServiceNo</p>
                <a href="/Home/Logout" class="btn btn-outline-light">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="/Home/RroDashboard">📊 Dashboard</a>
        <a href="/Assessment/GetRroAssessment">📈 Reports</a>
        <a href="/Assessment/RegionOwnReportRRoview">📈 Reports</a>
        <a href="/Settings/Index">⚙️ Settings</a>
        <a href="/Help/Index">❓ Help</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
